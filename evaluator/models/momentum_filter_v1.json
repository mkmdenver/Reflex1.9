{
  "model_name": "momentum_filter_v1",
  "version": "1.1.0",
  "description": "Momentum breakout strategy with volatility and volume filters, fixed gain/stop exits, orderflow-based exit, and liquidity absorption adds. Cockpit-tunable parameters.",
  "stages": {
    "stage1": {
      "logic": "all",
      "rules": [
        { "field": "volatility", "op": ">=", "value": 0.5 },
        { "field": "volume",     "op": ">=", "value": 1000000 }
      ]
    },
    "stage2": {
      "logic": "all",
      "rules": [
        { "field": "momentum",   "op": ">=", "value_from": "params.min_momentum", "optional": true },
        { "field": "last_price", "op": ">=", "value_from": "params.price_floor",  "optional": true }
      ]
    }
  },
  "entry": {
    "type": "momentum_breakout",
    "params": {
      "throttle": 1,
      "torque": 0.5,
      "lookback": 5,
      "threshold": 1.2,
      "cooldown_seconds": 60,
      "min_volatility": 0.5,
      "min_momentum": 0.01,
      "price_floor": 1.0
    }
  },
  "exits": [
    { "type": "fixed_gain",  "params": { "target_points": 10 } },
    { "type": "fixed_stop",  "params": { "stop_points":   5 } },
    { "type": "orderflow_exit", "params": { "volume_near_bid": true, "tape_pressure_threshold": 0.3, "max_hold_seconds": 300 } }
  ],
  "add_model": {
    "type": "liquidity_absorption",
    "params": { "add_size": 1, "max_adds": 2, "absorption_threshold": 0.8, "spread_behavior": "narrowing" }
  },
  "risk": {
    "max_position_pct": 5.0
  }
}

           